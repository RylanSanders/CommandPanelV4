<Window x:Class="CommandPanelV4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommandPanelV4"
        mc:Ignorable="d"
        Title="Command Panel" Height="450" Width="800">
    <Grid>
        <ListView x:Name="ServicesListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                   <local:ServiceBar ServiceName="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" IsHitTestVisible="True" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
